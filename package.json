{
  "name": "sokosumi",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@10.24.0",
  "scripts": {
    "dev": "pnpm -r dev",
    "web:dev": "pnpm --filter web dev",
    "core:dev": "pnpm --filter core dev",
    "build": "pnpm -r build",
    "web:build": "pnpm --filter web build",
    "core:build": "pnpm --filter core build",
    "database:build": "pnpm --filter @sokosumi/database build",
    "start": "pnpm -r start",
    "core:start": "pnpm --filter core start",
    "web:start": "pnpm --filter web start",
    "lint": "pnpm -r lint",
    "web:lint": "pnpm --filter web lint",
    "web:lint:fix": "pnpm --filter web lint:fix",
    "database:lint": "pnpm --filter @sokosumi/database lint",
    "database:lint:fix": "pnpm --filter @sokosumi/database lint:fix",
    "lint:report": "pnpm -r lint:report",
    "web:lint:report": "pnpm --filter web lint:report",
    "test": "pnpm -r test",
    "web:test": "pnpm --filter web test",
    "test:ci": "pnpm -r test:ci",
    "web:test:ci": "pnpm --filter web test:ci",
    "format": "pnpm -r format",
    "web:format": "pnpm --filter web format",
    "database:format": "pnpm --filter @sokosumi/database format",
    "prisma:generate": "pnpm --filter @sokosumi/database prisma:generate",
    "prisma:migrate:dev": "pnpm --filter @sokosumi/database prisma:migrate:dev",
    "prisma:migrate:deploy": "pnpm --filter @sokosumi/database prisma:migrate:deploy",
    "prisma:migrate:reset": "pnpm --filter @sokosumi/database prisma:migrate:reset",
    "prisma:studio": "pnpm --filter @sokosumi/database prisma:studio"
  },
  "devDependencies": {
    "eslint": "9.39.1",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-import": "2.32.0",
    "eslint-plugin-simple-import-sort": "12.1.1",
    "eslint-plugin-unused-imports": "4.3.0",
    "prettier": "3.7.4",
    "typescript-eslint": "8.49.0"
  }
}
